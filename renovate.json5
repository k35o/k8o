{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "monorepo:storybook",
    "monorepo:react",
    "monorepo:nextjs",
    "monorepo:vitest"
  ],
  "timezone": "Asia/Tokyo",
  "prConcurrentLimit": 10,
  "schedule": ["every weekend"],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "!/^(pnpm|node)$/",
        "!/@storybook/",
        "!/storybook$/",
        "!/react$/",
        "!/react-dom$/",
        "!/next$/",
        "!/vitest$/",
        "!/@vitest/",
        "@typescript/native-preview",
      ],
      "groupName": "minor and patch dependencies"
    }
  ]
}
