{
  "name": "@k8o/core",
  "version": "1.0.0",
  "description": "k8o site",
  "private": true,
  "type": "module",
  "imports": {
    "#database/db": {
      "storybook": "./src/mocks/db.mock.ts",
      "default": "./src/database/db.ts"
    },
    "#api/blog": {
      "storybook": "./src/mocks/api/blog.mock.ts",
      "default": "./src/app/blog/_api/index.ts"
    },
    "#link-card/metadata": {
      "storybook": "./src/mocks/link-card/metadata.mock.ts",
      "default": "./src/components/link-card/metadata.ts"
    },
    "#libs/react": {
      "storybook": "./src/mocks/libs/react.mock.ts",
      "default": "./src/libs/react.ts"
    },
    "#next/server": {
      "storybook": "./src/mocks/libs/next/server.mock.ts",
      "default": "next/server"
    },
    "#*": [
      "./*",
      "./*.ts",
      "./*.tsx"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --max-warnings 0 ./src",
    "lint:fix": "eslint --fix --max-warnings 0 ./src",
    "format": "prettier --write --experimental-cli src/",
    "format:check": "prettier --check --experimental-cli src/",
    "test": "TZ=UTC vitest",
    "email": "email dev --dir src/emails --port 3333",
    "generate": "drizzle-kit generate",
    "generate:custom": "drizzle-kit generate --custom",
    "migrate": "drizzle-kit migrate",
    "export:schema": "drizzle-kit export > ./schema.sql",
    "build:erd": "liam erd build --input ./schema.sql --format postgres",
    "preview:erd": "pnpm run build:erd && pnpm run preview:dist",
    "type-check": "tsgo --noEmit",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "preview:dist": "pnpm dlx http-server dist"
  },
  "dependencies": {
    "@floating-ui/react": "0.27.13",
    "@mdx-js/loader": "3.1.0",
    "@mdx-js/react": "3.1.0",
    "@neondatabase/serverless": "1.0.1",
    "@next/env": "15.3.5",
    "@next/mdx": "15.3.5",
    "@next/third-parties": "15.3.5",
    "@react-email/components": "0.3.1",
    "@shikijs/rehype": "3.7.0",
    "@tailwindcss/postcss": "4.1.11",
    "@vercel/analytics": "1.5.0",
    "@vercel/speed-insights": "1.2.0",
    "baseline-status": "1.0.11",
    "budoux": "0.7.0",
    "drizzle-orm": "0.44.2",
    "lucide-react": "0.525.0",
    "motion": "12.23.3",
    "next": "15.3.5",
    "next-themes": "0.4.6",
    "postcss": "8.5.6",
    "react-error-boundary": "6.0.0",
    "rehype-katex": "7.0.1",
    "remark-math": "6.0.0",
    "resend": "4.6.0",
    "rss": "1.2.2",
    "tailwindcss": "4.1.11",
    "test": "^3.3.0",
    "uqr": "0.1.2",
    "ws": "8.18.3",
    "zod": "4.0.5"
  },
  "devDependencies": {
    "@liam-hq/cli": "0.6.4",
    "@storybook/addon-a11y": "9.0.9",
    "@storybook/addon-docs": "9.0.9",
    "@storybook/addon-vitest": "9.0.9",
    "@storybook/nextjs": "9.0.9",
    "@storybook/nextjs-vite": "9.0.9",
    "@types/mdx": "2.0.13",
    "@types/node": "22.16.3",
    "@types/rss": "0.0.32",
    "@types/ws": "8.18.1",
    "@typescript/native-preview": "7.0.0-dev.20250711.1",
    "axe-playwright": "2.1.0",
    "chromatic": "13.1.2",
    "drizzle-kit": "0.31.4",
    "msw": "2.10.4",
    "msw-storybook-addon": "2.0.5",
    "postgres": "3.4.7",
    "react-email": "4.1.3",
    "react-scan": "0.4.3",
    "sonda": "0.9.0",
    "storybook": "9.0.9",
    "storybook-addon-mock-date": "1.0.1"
  },
  "msw": {
    "workerDirectory": [
      "./.storybook/public"
    ]
  }
}
