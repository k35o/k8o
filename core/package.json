{
  "name": "@k8o/core",
  "version": "1.0.0",
  "description": "k8o site",
  "private": true,
  "type": "module",
  "imports": {
    "#next/server": {
      "storybook": "./src/mocks/libs/next/server.mock.ts",
      "default": "next/server"
    },
    "#*": [
      "./*",
      "./*.ts",
      "./*.tsx"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check": "biome check",
    "check:write": "biome check --write --unsafe",
    "test": "TZ=UTC vitest",
    "test:e2e": "playwright test",
    "email": "email dev --dir src/emails --port 3333",
    "generate": "drizzle-kit generate",
    "generate:custom": "drizzle-kit generate --custom",
    "migrate": "drizzle-kit migrate",
    "export:schema": "drizzle-kit export > ./schema.sql",
    "build:erd": "liam erd build --input ./schema.sql --format postgres",
    "preview:erd": "pnpm run build:erd && pnpm run preview:dist",
    "type-check": "next typegen && tsc --noEmit",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "preview:dist": "pnpm dlx http-server dist"
  },
  "dependencies": {
    "@k8o/arte-odyssey": "1.0.0",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@neondatabase/serverless": "1.0.2",
    "@next/env": "15.5.4",
    "@next/mdx": "15.5.4",
    "@next/third-parties": "15.5.4",
    "@react-email/components": "0.5.6",
    "@shikijs/rehype": "3.13.0",
    "@tailwindcss/postcss": "4.1.14",
    "@vercel/analytics": "1.5.0",
    "@vercel/speed-insights": "1.2.0",
    "budoux": "0.7.0",
    "dompurify": "3.3.0",
    "drizzle-orm": "0.44.6",
    "motion": "12.23.24",
    "next": "15.5.4",
    "next-themes": "0.4.6",
    "postcss": "8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rehype-katex": "7.0.1",
    "remark-math": "6.0.0",
    "resend": "6.1.2",
    "rss": "1.2.2",
    "tailwindcss": "4.1.14",
    "uqr": "0.1.2",
    "ws": "8.18.3",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@liam-hq/cli": "0.7.19",
    "@playwright/test": "1.56.0",
    "@storybook/addon-a11y": "9.1.10",
    "@storybook/addon-docs": "9.1.10",
    "@storybook/addon-vitest": "9.1.10",
    "@storybook/nextjs-vite": "9.1.10",
    "@types/mdx": "2.0.13",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/rss": "0.0.32",
    "@types/ws": "8.18.1",
    "axe-playwright": "2.2.2",
    "chromatic": "13.3.0",
    "drizzle-kit": "0.31.5",
    "msw": "2.11.5",
    "msw-storybook-addon": "2.0.6",
    "postgres": "3.4.7",
    "react-email": "4.3.0",
    "react-scan": "0.4.3",
    "sonda": "0.9.0",
    "storybook": "9.1.10",
    "storybook-addon-mock-date": "1.0.2",
    "vitest-browser-react": "1.0.1"
  },
  "msw": {
    "workerDirectory": [
      "./.storybook/public"
    ]
  }
}
