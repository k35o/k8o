{
  "$schema": "https://turborepo.com/schema.json",
  "globalPassThroughEnv": [
    "ANALYZE",
    "CRON_SECRET",
    "GITHUB_TOKEN",
    "NEXT_PUBLIC_GOOGLE_ANALYTICS_ID",
    "NODE_ENV",
    "RESEND_API_KEY",
    "TURSO_AUTH_TOKEN",
    "TURSO_DATABASE_URL",
    "VERCEL_ENV",
    "VERCEL_URL"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
