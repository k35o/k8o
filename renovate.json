{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "monorepo:storybook",
    "monorepo:react",
    "monorepo:nextjs"
  ],
  "timezone": "Asia/Tokyo",
  "prConcurrentLimit": 10,
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
