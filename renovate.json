{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "monorepo:storybook",
    "monorepo:react",
    "monorepo:nextjs"
  ],
  "timezone": "Asia/Tokyo",
  "prConcurrentLimit": 10,
  "schedule": ["every weekend"],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["!/^(pnpm|node)$/"],
      "groupName": "minor and patch dependencies"
    }
  ]
}
