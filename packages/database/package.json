{
  "name": "@repo/database",
  "version": "1.0.0",
  "description": "Database client for k8o project",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "storybook": "./src/__mocks__/db.ts",
      "node": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "turso dev --db-file local.db --port 8787",
    "type-check": "tsgo --noEmit",
    "generate": "drizzle-kit generate",
    "generate:custom": "drizzle-kit generate --custom",
    "migrate": "drizzle-kit migrate",
    "export:schema": "drizzle-kit export > ./schema.sql",
    "build:erd": "liam erd build --input ./schema.sql --format sqlite",
    "preview:erd": "pnpm run build:erd && pnpm dlx http-server dist"
  },
  "dependencies": {
    "@libsql/client": "0.15.15",
    "@next/env": "16.1.0",
    "drizzle-orm": "0.45.1"
  },
  "devDependencies": {
    "@liam-hq/cli": "0.7.24",
    "@repo/typescript-config": "workspace:*",
    "drizzle-kit": "0.31.8"
  }
}
